<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/css/bootstrap.min.css" integrity="sha384-DhY6onE6f3zzKbjUPRc2hOzGAdEf4/Dz+WJwBvEYL/lkkIsI3ihufq9hk9K4lVoK" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha2/js/bootstrap.bundle.min.js" integrity="sha384-BOsAfwzjNJHrJ8cZidOg56tcQWfp6y72vEJ8xQ9w6Quywb24iOsW913URv1IS4GD" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/CSS/main.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body>
<header class="container-fluid">
    <nav class="row">
        <a asp-action="Index" asp-controller="Home" class="col">Домашняя</a>
        <a asp-action="Catalog" asp-controller="Home" class="col">Каталог</a>
        @if (User.Identity.IsAuthenticated)
        {
            @if(User.IsInRole("User")) {
                <a asp-action="CreateBooking" asp-controller="Reserving" class="col">Аренда зала</a>
            }
            <a asp-action="UserAdministrationPanel" asp-controller="Manage" class="col">Личный кабинет</a>
            <a asp-action="Logout" asp-controller="Account" class="col logout">Выйти</a>
        }
        else
        {
            <a asp-action="Registration" asp-controller="Account" class="col">Регистрация</a>
            <a asp-action="Login" asp-controller="Account" class="col login">Войти</a>
        }
    </nav>
</header>
@RenderBody()
</body>
</html>